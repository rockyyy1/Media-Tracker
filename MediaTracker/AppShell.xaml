<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MediaTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MediaTracker"
    Shell.FlyoutBehavior="Disabled"
    Title="MediaTracker">

    <TabBar >
        <Tab
            Title="My Library">
            <ShellContent 
                Title="Library"
                Route="MainPage"
                ContentTemplate="{DataTemplate local:LibraryPage}" />
        </Tab>
        <Tab
            Title="Add New Item">
            <ShellContent 
                Route="LibraryPage"
                ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab
            Title="Currently Watching">
            <ShellContent 
            Route="CurrentlyWatchingPage"
            ContentTemplate="{DataTemplate local:CurrentlyWatchingPage}" />
        </Tab>
        <Tab
            Title="Available Now">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab
            Title="Coming Soon">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab
            Title="Completed">
            <ShellContent 
            Route="CompletedPage"
            ContentTemplate="{DataTemplate local:CompletedPage}" />
        </Tab>

    </TabBar>

</Shell>
